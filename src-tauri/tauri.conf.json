{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "taskflow",
  "version": "0.2.0",
  "identifier": "com.tcs.taskflow",
  "build": {
    "beforeDevCommand": "pnpm start",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist/taskflow/browser"
  },
  "app": {
    "windows": [
      {
        "title": "Task Flow",
        "fullscreen": false,
        "resizable": true,
        "width": 800,
        "height": 600,
        "minHeight": 150,
        "minWidth": 150
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.ico",
      "icons/icon.png",
      "icons/128x128.png"
    ],
    "resources": {
      ".env": ".env"
    },
    "linux": {
      "appimage": {
        "bundleMediaFramework": true,
        "files": {}
      },
      "deb": {
        "files": {}
      },
      "rpm": {
        "epoch": 0,
        "files": {},
        "release": "1"
      }
    },
    "windows": {
      "webviewInstallMode": {
        "type": "embedBootstrapper"
      }
    }
  }
}