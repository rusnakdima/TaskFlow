{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "taskflow",
  "version": "0.1.0",
  "identifier": "com.tcs.taskflow",
  "build": {
    "beforeDevCommand": "pnpm start",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist/taskflow/browser"
  },
  "app": {
    "windows": [
      {
        "title": "Task Flow",
        "fullscreen": false,
        "resizable": true,
        "width": 800,
        "height": 600,
        "minHeight": 150,
        "minWidth": 150
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}